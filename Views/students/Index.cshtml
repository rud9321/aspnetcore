@model IEnumerable<coreapp2.Models.student>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>
<a href="/students/create">Add Student</a>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered"
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr onclick="functionRowClick(@item.Id)" style="cursor:pointer">
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Address</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
<script>
function functionRowClick(id)
{
    window.location="/students/details/"+id;
}
</script>