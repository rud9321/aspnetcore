
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Student</h2>

<form action="/students/create" method="post">
    <div class="form-group">
        <label for="email">Name:</label>
        <input type="text" class="form-control" id="Name" placeholder="Enter email" name="Name">
    </div>
    <div class="form-group">
        <label for="pwd">Age:</label>
        <input type="number" class="form-control" id="Age" placeholder="Enter password" name="Age">
    </div>
    <div class="form-group">
        <label for="pwd">Address:</label>
        <textarea class="form-control" id="address" rows="5" name="Address" placeholder="Enter Address"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
    <a href="/students" class="btn btn-danger">Cancel</a>
</form>